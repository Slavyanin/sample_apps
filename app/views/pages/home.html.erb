<% if signed_in? %>

  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">Что происходит?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>

<% else %>

<h1>Сервис микроблогов</h1>
<p>
  Это главная страница сервиса микроблогов. Приложение сделано И. Александром и Х. Анзором.
</p>

<%= link_to "Присоединиться!", signup_path, :class => "signup_button round" %>

<% end %>
